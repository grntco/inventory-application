<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- <link rel="stylesheet" href="./styles.css" /> -->
    <title><%= title %></title>
  </head>
  <body>
    <%- include('./partials/header.ejs')%>
    <form action="/items/<%= item ? `${item.id}/update` : 'new' %>" method="POST">
     <input type="text" name="name" id="name" placeholder="Name" value="<%= item
      ? item.name : "" %>"/>
      <input type="text" name="description"
      id="description" placeholder="Description" value="<%= item ?
      item.description : "" %>" /> <% if (categories) { %>
      <select name="category_id" id="category_id">
        <% categories.map(category => { %>
        <option <%= item.category_id === category.id ? "selected" : "" %> value="<%= category.id %>"><%= category.name %></option>
        <% })%>
      </select>
      <% } %>
      <!-- <input type="file"> -->
      <button type="submit"><%= item ? "Update" : "Done" %></button>
    </form>
  </body>
</html>
